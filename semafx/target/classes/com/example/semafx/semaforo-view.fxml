    <GridPane fx:id="board" hgap="10" vgap="10" alignment="CENTER">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20"/>
        </padding>
    </GridPane>
    <Label fx:id="indicadorVezLabel" text="Vez do adversário"/>
    <Label fx:id="pecasVerdeLabel" text="Peças Verdes: 8"/>
    <Label fx:id="pecasAmarelaLabel" text="Peças Amarelas: 8"/>
    <Label fx:id="pecasVermelhasLabel" text="Peças Vermelhas: 8"/>
</VBox>
